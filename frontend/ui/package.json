{
  "name": "@yuna/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint .",
    "prebuild": "pnpm run clean && node scripts/generate-exports.mjs",
    "build": "vite build && tsc && cp src/theme.css dist/theme.css",
    "prewatch": "pnpm run clean && node scripts/generate-exports.mjs",
    "watch": "BUILD_WATCH=1 vite build --watch & tsc --watch --preserveWatchOutput & chokidar 'src/theme.css' -c 'cp src/theme.css dist/theme.css' --initial"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./theme.css": "./dist/theme.css",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-accordion": "1.2.12",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-aspect-ratio": "1.1.7",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-menubar": "1.1.16",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-progress": "1.1.7",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "1.2.6",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-toggle": "1.1.10",
    "@radix-ui/react-toggle-group": "1.1.11",
    "@radix-ui/react-tooltip": "1.2.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.6.0",
    "input-otp": "1.4.2",
    "lucide-react": "0.548.0",
    "next-themes": "0.4.6",
    "react": "19.2.0",
    "react-day-picker": "9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "7.65.0",
    "react-resizable-panels": "3.0.6",
    "recharts": "2.15.4",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1",
    "vaul": "1.1.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@tailwindcss/vite": "4.1.16",
    "@types/node": "24.9.1",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "babel-plugin-react-compiler": "1.0.0",
    "chokidar-cli": "3.0.0",
    "eslint": "9.38.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "16.4.0",
    "rimraf": "6.0.1",
    "tailwindcss": "4.1.16",
    "ts-node": "10.9.2",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vite": "npm:rolldown-vite@7.1.19"
  }
}