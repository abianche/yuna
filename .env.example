# Yuna - Example Environment Variables
# Copy this file to `.env` and adjust as needed.
# These defaults work with `docker compose up -d` using the included docker-compose.yml.

# Database
POSTGRES_USER=yuna
POSTGRES_PORT=5432
POSTGRES_PASSWORD=yuna
POSTGRES_DB=yuna

# Host-side URL (for prisma commands you run on your machine)
DATABASE_URL=postgresql://yuna:yuna@localhost:5432/yuna?schema=public

# In-container URL (for the api service)
# The host `db` matches the docker compose service name.
DATABASE_URL_DOCKER=postgresql://yuna:yuna@db:5432/yuna?schema=public

# API
API_PORT=8080
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:5173

# Redis
# The host `redis` matches the docker compose service name.
REDIS_HOST=redis
REDIS_PORT=6379

# Updater / Health
UPDATE_CHECK_INTERVAL=3600
HEALTHCHECK_PATH=/health

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production
